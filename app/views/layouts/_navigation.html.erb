<% if current_user %>
  <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #add8e6;">
    <div class="container-fluid">
      <%= link_to "SmartFlow", root_path, class: "nav-link font-weight-bold text-dark "%>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "nav-link font-weight-bold text-dark "%>
          </li>
          <li class="nav-item">
            <%= link_to "Business Partners", vendor_master_business_partners_path(vendor_master_id: 1), class: "nav-link font-weight-bold text-dark " %>
          </li>
        </ul>
      </div>

      <div class="user-profile">
  <%= link_to user_path(current_user), class: "nav-link user-link font-weight-bold text-dark" do %>
    <div class="user-initials-circle">
      <%= current_user.firstname.first + current_user.lastname.first %>
    </div>
  <% end %>
</div>
          <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "font-weight-bold text-dark " do %>
            <i class="fas fa-sign-out-alt" style="vertical-align: middle; margin-right: 5px;"></i>
          <% end %>
        </div>
      </div>
    </nav>
<% end %>


<style>
.user-initials-circle {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  background-color: #007bff; /* Or any color you desire */
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}

</style>